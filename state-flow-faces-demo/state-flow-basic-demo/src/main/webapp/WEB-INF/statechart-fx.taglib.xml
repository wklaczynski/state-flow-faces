<facelet-taglib 
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd"
    version="2.2">
    <namespace>http://xmlns.apache.org/faces/fxscxml</namespace>
    
    <tag>
        <tag-name>call</tag-name>
        <description><![CDATA[The <call> element is call to expression method.]]></description>
        <handler-class>org.apache.common.faces.state.tag.ActionHandler</handler-class>
        <attribute>
            <description><![CDATA[An expression returning the value to be assigned. See 5.9.3 Legal Data Values and Value Expressions for details.]]></description>
            <name>expr</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    
    <tag>
        <tag-name>redirect</tag-name>
        <description><![CDATA[The <redirect> element is redirect to faces action or url.]]></description>
        <handler-class>org.apache.common.faces.state.tag.ActionHandler</handler-class>
        <attribute>
            <description><![CDATA[URL to to the external page or faces action name.]]></description>
            <name>url</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>renderState</tag-name>
        <description><![CDATA[The <renderState> element is redirect to faces action or url.]]></description>
        <component>
            <component-type>org.apache.common.faces.UIStateChartController</component-type>
            <handler-class>org.apache.common.faces.impl.state.tag.faces.RenderStateHandler</handler-class>
        </component>
        <attribute>
            <description><![CDATA[Name of the defined scxml proces in parent component.]]></description>
            <name>name</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[If required should be disabled. Default = false.]]></description>
            <name>required</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>
                        
</facelet-taglib>
