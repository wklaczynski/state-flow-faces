<?xml version='1.0' encoding='UTF-8'?>

<faces-config 
    version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <name>state_flow_faces</name>
    
    <ordering>
        <before>
            <others />
        </before>
    </ordering>    
    
    <lifecycle>
        <phase-listener>org.apache.common.faces.impl.state.listener.StateFlowPhaseListener</phase-listener>
    </lifecycle>
    
            
    <application>
        <el-resolver>org.apache.common.faces.impl.state.el.StateFlowELResolver</el-resolver>
        <navigation-handler>org.apache.common.faces.impl.state.facelets.StateFlowNavigationHandler</navigation-handler>
        <view-handler>org.apache.common.faces.impl.state.facelets.StateFlowViewHandler</view-handler>
        <action-listener>org.apache.common.faces.impl.state.listener.StateFlowActionListener</action-listener>

        <system-event-listener>
            <system-event-listener-class>org.apache.common.faces.impl.state.listener.StateFlowDefinitionListener</system-event-listener-class>
            <system-event-class>javax.faces.event.PostAddToViewEvent</system-event-class>
            <source-class>org.apache.common.faces.state.component.UIStateChartMachine</source-class>
        </system-event-listener>
                        
        <system-event-listener>
            <system-event-listener-class>org.apache.common.faces.impl.state.listener.StateFlowControllerListener</system-event-listener-class>
            <system-event-class>javax.faces.event.PostAddToViewEvent</system-event-class>
            <source-class>org.apache.common.faces.state.component.UIStateChartExecutor</source-class>
        </system-event-listener>

        <system-event-listener>
            <system-event-listener-class>org.apache.common.faces.impl.state.listener.StateFlowControllerListener</system-event-listener-class>
            <system-event-class>javax.faces.event.PostRestoreStateEvent</system-event-class>
            <source-class>org.apache.common.faces.state.component.UIStateChartExecutor</source-class>
        </system-event-listener>

        <system-event-listener>
            <system-event-listener-class>org.apache.common.faces.impl.state.listener.StateFlowControllerListener</system-event-listener-class>
            <system-event-class>javax.faces.event.PreRenderViewEvent</system-event-class>
            <source-class>org.apache.common.faces.state.component.UIStateChartExecutor</source-class>
        </system-event-listener>
        
    </application>
    
    <factory>
        <view-declaration-language-factory>org.apache.common.faces.impl.state.facelets.StateFlowViewDeclarationLanguageFactory</view-declaration-language-factory>
        <partial-view-context-factory>org.apache.common.faces.impl.state.facelets.StateFlowPartialViewContextFactory</partial-view-context-factory>
    </factory>

    <component>
        <component-type>org.apache.common.faces.UIStateChartMachine</component-type>
        <component-class>org.apache.common.faces.state.component.UIStateChartMachine</component-class>
    </component>

    <component>
        <component-type>org.apache.common.faces.UIStateChartExecutor</component-type>
        <component-class>org.apache.common.faces.state.component.UIStateChartExecutor</component-class>
    </component>

    <component>
        <component-type>org.apache.common.faces.UIStateChartFacetRender</component-type>
        <component-class>org.apache.common.faces.state.component.UIStateChartFacetRender</component-class>
    </component>
    
    <render-kit>
        <render-kit-id>HTML_BASIC</render-kit-id>
        <renderer>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>org.apache.common.faces.StateFlowScriptRenderer</renderer-type>
            <renderer-class>org.apache.common.faces.impl.state.renderer.StateFlowScriptRenderer</renderer-class>
        </renderer>
    </render-kit>
    
    
    
</faces-config>