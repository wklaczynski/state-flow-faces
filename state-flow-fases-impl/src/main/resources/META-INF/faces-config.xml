<?xml version='1.0' encoding='UTF-8'?>

<faces-config 
    version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <ordering>
        <before>
            <others />
        </before>
    </ordering>    
    
    <application>
        <el-resolver>org.ssoft.faces.state.facelets.StateFlowELResolver</el-resolver>
        <el-resolver>org.ssoft.faces.state.facelets.StateFlowScopesELResolver</el-resolver>
        <navigation-handler>org.ssoft.faces.state.facelets.StateFlowNavigationHandler</navigation-handler>
        <view-handler>org.ssoft.faces.state.facelets.StateFlowViewHandler</view-handler>
    </application>
    
    <factory>
        <view-declaration-language-factory>org.ssoft.faces.state.facelets.StateFlowViewDeclarationLanguageFactory</view-declaration-language-factory>
    </factory>

    <component>
        <component-type>javax.faces.UIStateChartRoot</component-type>
        <component-class>javax.faces.state.component.UIStateChartRoot</component-class>
    </component>
    
    
</faces-config>